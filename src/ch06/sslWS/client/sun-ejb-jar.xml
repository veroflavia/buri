<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sun-ejb-jar PUBLIC '-//Sun Microsystems, Inc.//
DTD Sun ONE Application Server 8.0 EJB 2.1//EN'
'http://www.sun.com/software/sunone/appserver/dtds/sun-ejb-jar_2_1-0.dtd'>
<sun-ejb-jar>
	<enterprise-beans>
		<ejb>
			<ejb-name>EchoSSL</ejb-name>
			<webservice-endpoint>
				<port-component-name>EchoSSL</port-component-name>
				<login-config>
					<auth-method>CLIENT-CERT</auth-method>
					<realm>certificate</realm>
				</login-config>
				<transport-guarantee>CONFIDENTIAL</transport-guarantee>
			</webservice-endpoint>
		</ejb>
	</enterprise-beans>
</sun-ejb-jar>